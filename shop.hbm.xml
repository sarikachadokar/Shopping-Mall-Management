<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
   "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping> 
  <class  name="com.shoppingmall.pojo.Shop" table="shop">
         <id name="shopId" type="int" column="sid">  
<generator class="increment"></generator>
</id> 
 
    <property name="shopName" type="string" column="sname"/>  
    <property name="shopProduct" type="string" column ="sproduct"/>  
          
  </class >  
 </hibernate-mapping> 